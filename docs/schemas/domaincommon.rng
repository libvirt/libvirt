          </element>
        </optional>
        <optional>
          <element name="lease">
            <ref name="featurestate"/>
          </element>
        </optional>
        <optional>
          <element name="linux_immutable">
            <ref name="featurestate"/>
          </element>
        </optional>
        <optional>
          <element name="mac_admin">
            <ref name="featurestate"/>
          </element>
        </optional>
        <optional>
          <element name="mac_override">
            <ref name="featurestate"/>
          </element>
        </optional>
        <optional>
          <element name="mknod">
