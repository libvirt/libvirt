          <value>virtio-transitional</value>
          <value>virtio-non-transitional</value>
        </choice>
      </attribute>
    </optional>
    <element name="source">
      <choice>
        <group>
          <attribute name="protocol">
            <value>vhost</value>     <!-- vhost, required -->
          </attribute>
          <attribute name="wwpn">
            <data type="string">
              <param name="pattern">(naa\.)[0-9a-fA-F]{16}</param>
            </data>
          </attribute>
        </group>
      </choice>
    </element>
  </define>

