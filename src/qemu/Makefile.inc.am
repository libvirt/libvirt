	$(GNUTLS_CFLAGS) \
	$(LIBNL_CFLAGS) \
	$(SELINUX_CFLAGS) \
	$(XDR_CFLAGS) \
	-I$(srcdir)/access \
	-I$(srcdir)/conf \
	-I$(srcdir)/secret \
	$(AM_CFLAGS) \
	$(NULL)
libvirt_driver_qemu_impl_la_LDFLAGS = $(AM_LDFLAGS)
libvirt_driver_qemu_impl_la_LIBADD = \
	$(CAPNG_LIBS) \
	$(GNUTLS_LIBS) \
	$(LIBNL_LIBS) \
	$(SELINUX_LIBS) \
	$(LIBXML_LIBS) \
	$(NULL)
